<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  android:background="@drawable/back"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="55dp" >

        <Button
            android:id="@+id/btn_lokasigereja"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn"
            android:text="Lokasi Gereja"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_tentang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_lokasigereja"
            android:layout_below="@+id/btn_lokasigereja"
            android:layout_marginTop="33dp"
            android:background="@drawable/btn"
            android:text="Tentang"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_keluar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_tentang"
            android:layout_below="@+id/btn_tentang"
            android:layout_marginTop="33dp"
            android:background="@drawable/btn"
            android:text="Keluar"
            android:textSize="25dp" />

    </RelativeLayout>

</RelativeLayout>
